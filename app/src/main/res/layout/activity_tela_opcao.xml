<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tela_opcao"
    android:background="@drawable/background">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_voltar_opcao"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:drawableStart="@drawable/ic_arrow_2_1"
        style="@style/Button10_Dgrey"
        android:text="Voltar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/LLLLLLL_grey"
        android:textSize="13sp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/rectangle_1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/userP"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="@+id/bt_voltar_opcao"
        app:layout_constraintTop_toBottomOf="@+id/bt_voltar_opcao"

        />

    <TextView
        android:id="@+id/text_NomeUsuario"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text=""
        android:textColor="@color/LLLLLLL_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/userP"
        app:layout_constraintTop_toTopOf="@id/userP"
        />
    <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/botao_alerta"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_1"
        android:drawableStart="@drawable/ic_alerta"
        android:background="@color/D_grey"
        android:text="Alertas"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/LLLLLLL_grey"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:drawableEnd="@drawable/ic_arrow_2"/>
    <View
        android:id="@+id/divisoriaAlerta"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/LL_grey"
        app:layout_constraintTop_toBottomOf="@+id/botao_alerta"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_mensagem"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/divisoriaAlerta"
        android:layout_marginRight="10dp"
        android:background="@color/D_grey"
        android:text="Mensagens"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/LLLLLLL_grey"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_mensagens"
        android:drawableEnd="@drawable/ic_arrow_2"/>
    <View
        android:id="@+id/divisoriamsn"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/LL_grey"
        app:layout_constraintTop_toBottomOf="@+id/botao_mensagem"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_movimentacao"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/divisoriamsn"
        android:layout_marginRight="10dp"
        android:background="@color/D_grey"
        android:text="Movimentação"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/LLLLLLL_grey"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_movimentacao"
        android:drawableEnd="@drawable/ic_arrow_2"/>
    <View
        android:id="@+id/divisoriamovi"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/LL_grey"
        app:layout_constraintTop_toBottomOf="@+id/botao_movimentacao"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_duvida"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/divisoriamovi"
        android:layout_marginRight="10dp"
        android:background="@color/D_grey"
        android:text="Dúvida"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/LLLLLLL_grey"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_duvida"
        android:drawableEnd="@drawable/ic_arrow_2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/LL_grey"
        app:layout_constraintTop_toBottomOf="@+id/botao_duvida"/>


</androidx.constraintlayout.widget.ConstraintLayout>