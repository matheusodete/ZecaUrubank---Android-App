<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="1280dp"
        android:background="@drawable/background"
        tools:context=".tela_principal">
        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rectangle_1"
            tools:ignore="MissingConstraints"
     />
        <ImageView
            android:id="@+id/userP"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/user"
            app:layout_constraintStart_toStartOf="@+id/rectangle_1"
            app:layout_constraintTop_toTopOf="@+id/rectangle_1"

            />

        <TextView
            android:id="@+id/text_NomeUsuario"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text=""
            android:textColor="@color/LLLLLLL_grey"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/text_ola"
            app:layout_constraintTop_toTopOf="@id/text_ola"
            />



        <TextView
            android:id="@+id/text_chavepix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/userP"
            app:layout_constraintBottom_toBottomOf="@+id/text_EmailUsuario"
            android:text="PIX: "
            android:textSize="10sp"
            android:textColor="@color/LLLLLLL_grey"
            />
        <TextView
            android:id="@+id/text_ola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@+id/userP"
            app:layout_constraintBottom_toBottomOf="@+id/userP"
            android:text="Olá "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/LLLLLLL_grey"
        />


        <TextView
            android:id="@+id/text_EmailUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="35dp"
            android:text=""
            android:textColor="@color/LLLLLLL_grey"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/text_chavepix"
            app:layout_constraintTop_toBottomOf="@id/text_NomeUsuario" />

        <Button
            android:id="@+id/bt_deslogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/green"
            android:padding="12dp"
            android:text="Deslogar"
            android:textColor="@color/D_grey"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_option"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/optionbuttonstyle"
            android:drawableTint="@color/green"
            android:backgroundTintMode="add"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="@id/rectangle_1"
            app:layout_constraintTop_toTopOf="@id/rectangle_1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_btt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/bt_option"
            app:layout_constraintTop_toBottomOf="@+id/bt_option"
            android:background="@drawable/edit_btt"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toStartOf="@+id/bt_option"
            app:layout_constraintTop_toTopOf="@+id/bt_option"
            android:background="@drawable/bt_info"
            />

        <TextView
            android:id="@+id/cifrao"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_1"
            app:layout_constraintStart_toStartOf="@+id/rectangle_1"
            android:text="R$"
            android:textStyle="bold"
            android:textSize="45sp"
            android:textColor="@color/LLLLLLL_grey"
            />
        <TextView
            android:id="@+id/saldo"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_1"
            app:layout_constraintStart_toEndOf="@+id/cifrao"
            android:text="....,.."
            android:textStyle="bold"
            android:textSize="45sp"
            android:textColor="@color/LLLLLLL_grey"
            />

        <HorizontalScrollView
            android:id="@+id/horizontalscroll"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/saldo"
            android:fillViewport="true"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:id="@+id/containerScroll"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp"
                android:layout_marginLeft="10dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/extrato"
                    android:layout_width="60dp"
                    android:layout_height="75dp"
                    android:background="@drawable/ext_logo"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintStart_toStartOf="@+id/cifrao"
                    app:layout_constraintTop_toBottomOf="@+id/cifrao"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pix"
                    android:layout_width="60dp"
                    android:layout_height="75dp"
                    android:background="@drawable/pix_logo"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintStart_toEndOf="@+id/extrato"
                    app:layout_constraintTop_toBottomOf="@+id/cifrao"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/boleto"
                    android:layout_width="60dp"
                    android:layout_height="75dp"
                    android:background="@drawable/boleto_logo"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintStart_toEndOf="@+id/pix"
                    app:layout_constraintTop_toBottomOf="@+id/cifrao"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/transf"
                    android:layout_width="60dp"
                    android:layout_height="75dp"
                    android:background="@drawable/tensf_logo"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintStart_toEndOf="@+id/boleto"
                    app:layout_constraintTop_toBottomOf="@+id/cifrao"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cofre"
                    android:layout_width="60dp"
                    android:layout_height="75dp"
                    android:background="@drawable/cofre_logo"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintStart_toEndOf="@+id/transf"
                    app:layout_constraintTop_toBottomOf="@+id/cifrao"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/emprestimo"
                    android:layout_width="63dp"
                    android:layout_height="76dp"
                    android:background="@drawable/emp_logo"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintStart_toEndOf="@+id/cofre"
                    app:layout_constraintTop_toBottomOf="@+id/cifrao"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/invest"
                    android:layout_width="60dp"
                    android:layout_height="75dp"
                    android:background="@drawable/invest_logo"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintStart_toEndOf="@+id/emprestimo"
                    app:layout_constraintTop_toBottomOf="@+id/cifrao"
                    />
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_cartao"
            android:layout_height="44dp"
            android:layout_width="match_parent"
            style="@style/Button10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bt_cartao"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalscroll"
            />
        <View
            android:id="@+id/divisoriaC"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            style="@style/ContainerComponents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_cartao"/>
        <TextView
            android:id="@+id/label_credit"
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/divisoriaC"
            app:layout_constraintStart_toStartOf="@+id/divisoriaC"
            app:layout_constraintEnd_toEndOf="@+id/divisoriaC"
            android:textColor="@color/white"
            android:hint="@string/credito"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"/>
        <View
            android:id="@+id/resumoFatura"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_credit"
            style="@style/ContainerComponents"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ajustarlimite"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/resumoFatura"
            style="@style/ContainerComponents2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Ajustar Limite"
            android:textColor="@color/LLLLLLL_grey"
            android:textStyle="bold"
            android:textAllCaps="false"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintBottom_toTopOf="@+id/ajustarlimite"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/LL_grey"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pagarfatura"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/resumoFatura"
            style="@style/Button2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Pagar fatura"
            android:textColor="@color/L_grey"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAllCaps="false"/>
        <View
            android:id="@+id/divisoriaI"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            style="@style/ContainerComponents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pagarfatura"/>

        <TextView
            android:id="@+id/label_invest"
            android:layout_width="160dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="@+id/divisoriaI"
            app:layout_constraintStart_toStartOf="@+id/divisoriaI"
            app:layout_constraintEnd_toEndOf="@+id/divisoriaI"
            android:layout_marginTop="10dp"
            android:text="Investimentos"
            android:textSize="25sp"
            android:textColor="@color/LLLLLLL_grey"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_rendaV"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Renda variável"
            android:textSize="15sp"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/label_invest"
            android:drawableEnd="@drawable/ic_arrow_2"
            style="@style/Button10"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_pupanca"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Poupança"
            android:textSize="15sp"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_rendaV"
            android:drawableEnd="@drawable/ic_arrow_2"
            style="@style/Button10"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_rendaFixa"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Renda fixa"
            android:textAllCaps="false"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_pupanca"
            android:drawableEnd="@drawable/ic_arrow_2"
            style="@style/Button10"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resumoinvest"
            android:layout_width="150dp"
            android:layout_height="250dp"
            style="@style/Button10"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintEnd_toEndOf="@+id/divisoriaI"
            app:layout_constraintTop_toBottomOf="@+id/label_invest"
            android:drawableEnd="@drawable/ic_arrow_2"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            style="@style/Button2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            app:layout_constraintStart_toStartOf="@+id/bt_rendaFixa"
            app:layout_constraintTop_toBottomOf="@+id/resumoinvest"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            style="@style/Button2"
           android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="45dp"
            app:layout_constraintStart_toStartOf="@+id/resumoinvest"
            app:layout_constraintTop_toBottomOf="@+id/resumoinvest"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>